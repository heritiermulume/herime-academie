# Redirection vers le dossier public pour Laravel
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Rediriger tout vers le dossier public sauf si le fichier existe déjà dans la racine
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

# Empêcher l'accès direct aux fichiers sensibles
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

